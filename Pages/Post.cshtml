<h2>Write a New Post</h2>

<form method="POST" enctype="multipart/form-data">
    <div class="col-md-12 well">
        <div class="form-group col-md-6">
            <label for="Title">Title</></label>
            <input type="text" class="form-control" placeholder="" asp-for="NewPost.Title" />
            <span asp-validation-for="NewPost.Title" class="text-warning"></span>
        </div>
        <div class="form-group col-md-12">
            <label for="Body" class="primaryField">Body</label>
            <textarea rows="10" class="form-control" placeholder="" asp-for="NewPost.Body" id="post-body"></textarea>
            <span asp-validation-for="NewPost.Body" class="text-warning"></span>
        </div>
        <div class="col-md-12">
            <input type="submit" name="publish" class="btn btn-primary btn-sm" value="Publish" asp-page-handler="Publish" />
        </div>
    </div>
</form>


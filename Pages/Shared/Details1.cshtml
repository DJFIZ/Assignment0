@page
@model Assignment0.Pages.Shared.Details1Model

<style>
    .pb-cmnt-container {
        font-family: Lato;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .pb-cmnt-textarea {
        resize: none;
        padding: 20px;
        height: 130px;
        width: 100%;
        border: 1px solid #F2F2F2;
    }
</style>

<h1 style="display:inline;">@Model.Blog.Title</h1>
<h5 style="display:inline;"> - @Model.Blog.Date.ToString("MMM dd, yyyy")</h5>

<div class="details">
    <article>
        <div class="col-md-12">
            <h3>@Model.Blog.Author</h3>
            <p>@Model.Blog.Body</p>
            <h5>@Model.Blog.NumComments Comments</h5>
        </div>
    </article>
</div>

<div class="container pb-cmnt-container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-info">
                <div class="panel-body">
                    <textarea placeholder="What are your thoughts?" class="pb-cmnt-textarea"></textarea>
                    <form class="form-inline">
                        <button class="btn btn-primary pull-right" type="button" onclick="publishComment()">Comment</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    foreach (var comment in Model.Blog.Comments)
    {
        <article>
            <div class="col-md-12">
                <h5><p>@comment.Author - @comment.Date.ToString("MMM dd, yyyy")</p></h5>
                <p>@comment.Body</p>
            </div>
        </article>
        <br>
    }
}

